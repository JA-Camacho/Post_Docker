FROM mysql
ENV MYSQL_ROOT_PASSWORD=root123
ENV MYSQL_USER=jose
ENV MYSQL_PASSWORD=jose123
ENV MYSQL_DATABASE=ContentHub
COPY /SQL/User_table.sql /docker-entrypoint-initdb.d/1_User_table.sql
COPY /SQL/Posts_table.sql /docker-entrypoint-initdb.d/2_Posts_table.sql
COPY /SQL/ini.sql /docker-entrypoint-initdb.d/
EXPOSE 3306
VOLUME /var/lib/mysql
